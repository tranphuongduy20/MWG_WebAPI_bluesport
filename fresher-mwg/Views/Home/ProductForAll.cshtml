@model List<fresher_mwg.Models.ProductModel>

<div class="listproduct listproduct-promo fInter">
    @foreach (var item in Model)
    {
        <div class="item">
            <a href="#">
                <div class="item-wrap">
                    <div class="item-label">
                        <span class="lb-percent">-@item.PercentSale%</span>
                        <span class="lb-tragop">Góp @item.PercentProfit%</span>
                    </div>
                    <div class="item-img">
                        <img src="~/Contents/images/img01.png" alt="ADIDAS Adizero Takumi Sen 7 Tokyo">
                    </div>
                </div>
                <h3 class="fInter"><span>@item.Name</span>  @item.Detail </h3>
                <div class="price">
                    <p class="price-current">@item.DiscountPrice</p>
                    <p class="price-old">@item.Price</p>
                </div>
            </a>
            @if (item.GroupImage != null)
            {
                <div class="item-color">
                    @foreach (var image in item.GroupImage)
                    {
                        if (image.CheckActive)
                        {
                            <a href="javascript:void(0)" class="item-color-img active">
                                <img src="@image.Image" alt="test">
                            </a>
                        }
                        else
                        {
                            <a href="javascript:void(0)" class="item-color-img">
                                <img src="@image.Image" alt="test">
                            </a>
                        }
                    }
                </div>
            }
        </div>
    }
</div>



